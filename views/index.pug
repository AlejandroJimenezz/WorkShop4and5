extend template

block content

 Section(class="row")
    each item in data
        article(class="col-xs-12 col-sm-6 col-md-4 card")
            img(src=item.thumbnailUrl, class="card-img-top", alt="")
            div(class="card-body")
                h2(class="card-title") Album: #{item.album}
                h3 Artist: #{item.artist}
                p Description: #(item.description)
                a(href=`/albums?id=${item.id}`, class=" btn btn-info") View album info